@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Oluşturma Tarihi</th>
        <th>Durum</th>
        <th>Mesajı Aç/th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriteName</td>
            <td>@(((DateTime)item.MessageCreatedAt).ToString("dd-MMM-yyyy"))</td>
            <td>
                @if (item.MessageStatus)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-secondary">Pasif</span>
                }
            </td>
            <td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-warning"> Mesajı Aç </a></td>
        </tr>
    }
</table>

<a href="/Message/MessageAdd/" class="btn btn-info">Yeni Mesaj Oluştur</a>

