    <h4>Yorumlar</h4>
    @if (@Model.ToList().Count == 0)
    {
        <p>Henüz yorum yapılmamıştır </p>
    }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTheme/images/t1.jpg" alt="" class="img-fluid" />
